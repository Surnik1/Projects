import telebot
import google.generativeai as genai
tg_token = 'Token_tg'
ai_token = 'Token_ai'
bot = telebot.TeleBot(tg_token)
system_prompt = '''
–¢—ã - –±–æ—Ç —É—á–∏—Ç–µ–ª—å, –∫–æ—Ç–æ—Ä—ã–π –ø–æ–º–æ–≥–∞–µ—Ç —Å–æ–≤–µ—Ç–∞–º–∏ –Ω–∞–ø—Ä–∞–≤–ª—è—è –≤ –Ω—É–∂–Ω–æ–µ —Ä—É—Å–ª–æ
1.–ü–æ–ø—Ä–æ–±—É–π –ø–æ—è—Å–Ω—è—Ç—å —Å–≤–æ—é –∏–¥–µ—é –∏ –æ–±—å—è–Ω–∏—Å—Ç—å –ø–æ —à–∞–≥–∞–º
2.–¢–æ–ª—å–∫–æ –µ—Å–ª–∏ —É –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –Ω–µ –ø–æ–ª—É—á–∞–µ—Ç—Å—è –¥–∞–π –≤–µ—Å—å –∫–æ–¥
3.–¢–∞–∫–∂–µ –ø—Ä–µ–¥–ª–∞–≥–∞–π —Ä–µ—Å—É—Ä—Å—ã –≥–¥–µ —ç—Ç–æ –æ–Ω –º–æ–∂–µ—Ç –ø—Ä–æ–≤–µ—Ä–∏—Ç—å –∏ –ø–æ–≤—Ç–æ—Ä–∏—Ç—å
'''
genai.configure(api_key=ai_token)
model = genai.GenerativeModel("gemini-3-flash-preview")

@bot.message_handler(commands=['start','help'])
def start(message):
    if message.text == '/start':
        bot.send_message(message.chat.id, '''
–ü—Ä–∏–≤–µ—Ç! üëã
–Ø —Ç–≤–æ–π –ª–∏—á–Ω—ã–π –ë–æ—Ç-—É—á–∏—Ç–µ–ª—å üß†‚ú®
–ú–æ–≥—É –æ–±—ä—è—Å–Ω–∏—Ç—å —Ç–µ–º—É, —Ä–µ—à–∏—Ç—å –∑–∞–¥–∞—á—É —à–∞–≥ –∑–∞ —à–∞–≥–æ–º –∏ –ø–æ–¥–≥–æ—Ç–æ–≤–∏—Ç—å –∫ –∫–æ–Ω—Ç—Ä–æ–ª—å–Ω–æ–π –∏–ª–∏ —ç–∫–∑–∞–º–µ–Ω—É.
–ü—Ä–æ—Å—Ç–æ –∑–∞–¥–∞–π –≤–æ–ø—Ä–æ—Å üôÇ''')
    if message.text == '/help':
        bot.send_message(message.chat.id , '''
/start - –ó–∞–ø—É—Å–∫ –±–æ—Ç–∞
/help - –ü–æ–∫–∞–∑ –º–µ–Ω—é –∫–æ–º–∞–Ω–¥''')
@bot.message_handler(func=lambda message: True)
def handle(message):

    response = model.generate_content([
        {"role": "user", "parts": [system_prompt]},
        {"role": "user", "parts": [message.text]},
    ])
    bot.send_message(message.chat.id, response.text)



bot.infinity_polling()
